                    "_id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "lastname": {
                      "type": "string"
                    },
                    "birthday": {
                      "type": "string"
                    },
                    "gender": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "_id": "421kj3421h5d23493245",
                    "name": "John",
                    "lastname": "Doe",
                    "birthday": "2000-01-01",
                    "gender": "M",
                    "role": "user",
