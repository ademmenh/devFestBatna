{
  "compilerOptions": {
      "target": "ES2021",
      "lib": ["es2021", "dom"],
      "module": "commonjs",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
          "@/*": ["src/*"],
          "@config/*": ["config/*"],
          "@db/*": ["db/*"],
          "@docs/*": ["docs/*"],
          "@middlewares/*": ["middlewares/*"],
          "@modules/*": ["modules/*"],
          "@routes/*": ["routes/*"],
          "@Types/*": ["types/*"],
          "@utils/*": ["utils/*"],
      },

      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
  },
  "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs"
  },
  "include": ["src", "src/test"]
}