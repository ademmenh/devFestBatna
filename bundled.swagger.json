  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "birthday": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "_id": "421kj3421h5d23493245",
                  "name": "John",
                  "lastname": "Doe",
                  "birthday": "2000-01-01",
                  "gender": "M",
                  "email": "johndoe@gmail.com",
                  "password": "johndoejohndoe"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "example": {
                  "_id": "421kj3421h5d23493245",
                  "name": "John",
                  "lastname": "Doe",
                  "birthday": "2000-01-01",
                  "gender": "M",
                  "role": "user",
                  "email": "johndoe@gmail.com"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
